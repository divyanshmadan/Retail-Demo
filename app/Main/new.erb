<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @main.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @main.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="main[name]" class="fieldLabel">Name</label>
            <input type="text" id="main[name]" name="main[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="main[price]" class="fieldLabel">Price</label>
            <input type="text" id="main[price]" name="main[price]" <%= placeholder("Price") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
