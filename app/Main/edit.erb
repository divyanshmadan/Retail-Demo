<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @main.name %></h1>
    <a href="<%= url_for :action => :show, :id => @main.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @main.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @main.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="main[name]" class="fieldLabel">Name</label>
            <input type="text" id="main[name]" name="main[name]" value="<%= @main.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="main[price]" class="fieldLabel">Price</label>
            <input type="text" id="main[price]" name="main[price]" value="<%= @main.price %>" <%= placeholder( "Price" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
